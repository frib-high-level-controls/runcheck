  script(type='text/javascript', src=basePath + '/node_modules/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js')
  //- script(type='text/javascript', src='/node_modules/typeahead.js/dist/typeahead.bundle.min.js')
  //- script(type='text/javascript', src='/javascripts/typeahead.js')
  script(type='text/javascript', src=basePath + '/js/shared/webutil.js')
