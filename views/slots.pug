extends layout.pug

block head
  link(rel='stylesheet', href='/node_modules/datatables-bootstrap/css/dataTables.bootstrap.min.css')
  title Slots :: RunCheck


block content
  .container
    br
    .modal.fade#newGroupModal(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true', data-bind='with: newGroupModal')
      .modal-dialog
        .modal-content
          .modal-header
            h3 Create new slot group
          .modal-body
            #message
            form.form-horizontal
              .form-group
                label.col-sm-2.control-label Name
                .col-sm-10
                  input.form-control(type='text', data-bind='value: name')
              .form-group
                label.col-sm-2.control-label Owner
                .col-sm-10.form-control-static
                  strong(data-bind='text: groupOwner')
              .form-group
                label.col-sm-2.control-label SafetyLevel
                .col-sm-10.form-control-static
                  strong(data-bind='text: safetyLevel')
              .form-group
                label.col-sm-2.control-label Description
                .col-sm-10
                  input.form-control(type='text', data-bind='value: description')
              button.btn.btn-primary.pull-right(type='button', data-bind='click: createNewGroupandAddSlot, enable: canSubmit') Create
              button.btn.btn-default(type='button', data-bind='click: close, enable: canClose') Close
    .modal.fade#existingGroupModal(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true', data-bind='with: existingGroupModal')
      .modal-dialog
        .modal-content
          .modal-header
            h3 Add to slot group
          .modal-body
            #message2
            form.form-horizontal
              .form-group
                label.col-sm-4.control-label Slot Group
                .col-sm-8
                  select.form-control(data-bind='options: groupOptions, value: selectedGroup')
              button.btn.btn-primary.pull-right(type='button', data-bind='click: addToExistingGroup, enable: canSubmit') Add
              button.btn.btn-default(type='button', data-bind='click: close, enable: canClose') Close
    .row
      .col-lg-8.col-md-8.col-sm-8
      .col-lg-2.col-md-2.col-sm-2
        form.form-inline.clearfix(data-bind='with: newGroupButton')
          button.btn.btn-primary.pull-right(type='button', data-bind='click: createNewGroup, enable: canCreate')
            | New Slot Group
      .col-lg-2.col-md-2.col-sm-2
        form.form-inline.clearfix(data-bind='with: existingGroupButton')
          button.btn.btn-primary.pull-right(type='button', data-bind='click: addToExistingGroup, enable: canAdd')
            | Add to Slot Group
    .tab-pane.active#slots
      .table-responsive
        table.table.table-condensed.table-bordered.table-hover#slots-table


block js
  script(type='text/javascript', src='/node_modules/datatables/media/js/jquery.dataTables.min.js')
  script(type='text/javascript', src='/node_modules/datatables-bootstrap/js/dataTables.bootstrap.min.js')
  script(type='text/javascript', src='/node_modules/knockout/build/output/knockout-latest.js')
  script(type='text/javascript', src='/js/shared/webutil.js')
  script(type='text/javascript', src='/js/datatablesutil.js')
  script(type='text/javascript', src='/js/slots-table.js')
  script(type='text/javascript', src='/js/slot-action.js')
  if forgurl
    script(type='text/javascript') var forgurl = '#{forgurl}'
